<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="pl.me.sqlitetest3.activities.SummaryActivity">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1"
                 android:id="@+id/tableLayout"
                 android:background="@color/wallet_dim_foreground_inverse_holo_dark">
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/choice_label"
                android:text="@string/choice_label_text"
                android:padding="3dip" />
            <TextView
                android:id="@+id/choice_value"
                android:gravity="start"
                android:padding="3dip" />
        </TableRow>

        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/points_label"
                android:text="Punkty"
                android:padding="3dip" />
            <TextView
                android:id="@+id/points"
                android:gravity="start"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Polecane miejsca:"
        android:id="@+id/textView"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1"
        android:id="@+id/recommendation1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:elegantTextHeight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2"
        android:id="@+id/recommendation2"
        android:layout_below="@+id/recommendation1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3"
        android:id="@+id/recommendation3"
        android:layout_below="@+id/recommendation2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>
